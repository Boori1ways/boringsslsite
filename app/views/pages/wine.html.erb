						<option data-result-count="19" value="petite sirah">Petite Sirah</option>
						<option data-result-count="1375" value="pinot noir">Pinot Noir</option>
						<option data-result-count="38" value="port blends">Port Blends</option>
						<option data-result-count="718" value="red bordeaux blends">Red Bordeaux Blends</option>
						<option data-result-count="258" value="red rhone blends">Red Rhone Blends</option>
						<option data-result-count="61" value="riesling">Riesling</option>
						<option data-result-count="1" value="roussanne">Roussanne</option>
						<option data-result-count="109" value="sangiovese">Sangiovese</option>
						<option data-result-count="22" value="sauvignon blanc">Sauvignon Blanc</option>
						<option data-result-count="92" value="semillon blends">Semillon Blends</option>
						<option data-result-count="96" value="super tuscan blends">Super Tuscan Blends</option>
						<option data-result-count="619" value="syrah/shiraz">Syrah/Shiraz</option>
						<option data-result-count="98" value="tempranillo">Tempranillo</option>
						<option data-result-count="10" value="viognier">Viognier</option>
						<option data-result-count="16" value="white bordeaux blends">White Bordeaux Blends</option>
						<option data-result-count="69" value="white rhone blends">White Rhone Blends</option>
						<option data-result-count="115" value="zinfandel">Zinfandel</option>
					</select>
				</div>
				<div class="entrydiv_row1">
					<span class="entrylabel">Country</span>
					<select id="country" name="country" class="selectpicker" data-live-search="true">
						<option value="">All</option>
						<option data-result-count="20" value="austria">Austria</option>
						<option data-result-count="192" value="australia">Australia</option>
						<option data-result-count="10" value="south africa">South Africa</option>
						<option data-result-count="3369" value="united states">United States</option>
						<option data-result-count="93" value="germany">Germany</option>
						<option data-result-count="2572" value="france">France</option>
						<option data-result-count="25" value="argentina">Argentina</option>
						<option data-result-count="489" value="italy">Italy</option>
						<option data-result-count="152" value="spain">Spain</option>
						<option data-result-count="8" value="chile">Chile</option>
						<option data-result-count="13" value="new zealand">New Zealand</option>
						<option data-result-count="2" value="other">Other</option>
						<option data-result-count="11" value="hungary">Hungary</option>
						<option data-result-count="29" value="portugal">Portugal</option>
						<option data-result-count="2" value="lebanon">Lebanon</option>
						<option data-result-count="1" value="mexico">Mexico</option>
						<option data-result-count="2" value="canada">Canada</option>
					</select>
				</div>
				<div class="entrydiv_row1">
					<span class="entrylabel">Region</span>
					<select id="region" name="region" class="selectpicker" data-live-search="true">
						<option value="">All</option>
						<option data-result-count="1" value="abruzzo">Abruzzo</option>
						<option data-result-count="42" value="alsace">Alsace</option>
						<option data-result-count="821" value="bordeaux">Bordeaux</option>
						<option data-result-count="1115" value="burgundy">Burgundy</option>
						<option data-result-count="3142" value="california">California</option>
						<option data-result-count="105" value="champagne">Champagne</option>
						<option data-result-count="8" value="languedoc roussillon">Languedoc Roussillon</option>
						<option data-result-count="20" value="loire">Loire</option>
						<option data-result-count="51" value="mosel saar ruwer">Mosel Saar Ruwer</option>
						<option data-result-count="5" value="nahe">Nahe</option>
						<option data-result-count="58" value="oregon">Oregon</option>
						<option data-result-count="487" value="other">Other</option>
						<option data-result-count="8" value="pfalz">Pfalz</option>
						<option data-result-count="200" value="piedmont">Piedmont</option>
						<option data-result-count="13" value="priorat">Priorat</option>
						<option data-result-count="12" value="provence">Provence</option>
						<option data-result-count="22" value="rheingau">Rheingau</option>
						<option data-result-count="436" value="rhone">Rhone</option>
						<option data-result-count="7" value="ribera del duero">Ribera del Duero</option>
						<option data-result-count="31" value="rioja">Rioja</option>
						<option data-result-count="1" value="spain">Spain</option>
						<option data-result-count="211" value="tuscany">Tuscany</option>
						<option data-result-count="25" value="veneto">Veneto</option>
						<option data-result-count="169" value="washington">Washington</option>
					</select>
				</div>
				<div class="entrydiv_row1">
					<span class="entrylabel">Size</span>
					<select id="size" name="size" class="selectpicker" data-live-search="true">
						<option value="">All</option>
						<option data-result-count="9" value="6000">6.0L</option>
						<option data-result-count="5" value="5000">5.0L</option>
						<option data-result-count="40" value="3000">3.0L</option>
						<option data-result-count="495" value="1500">1.5L</option>
						<option data-result-count="6220" value="750">750mL</option>
						<option data-result-count="29" value="500">500mL</option>
						<option data-result-count="184" value="375">375ml</option>
					</select>
				</div>
				<div class="entrydiv_row2">
					<span class="entrylabel">Scores</span>
					<div class="srchinputdiv">
						<input type="text" id="score_low" name="score_low" class="form-control srchinput" value="" onkeyup="FUSION.lib.noAlpha(this)" />
						<span class="srchspan">-</span>
						<input type="text" id="score_high" name="score_high" class="form-control srchinput" value="" onkeyup="FUSION.lib.noAlpha(this)" />
					</div>
				</div>
				<div class="entrydiv_row2">
					<span class="entrylabel">Price</span>
					<div class="srchinputdiv">
						<input type="text" id="price_low" name="price_low" class="form-control srchinput" value="" onkeyup="FUSION.lib.noAlpha(this)" />
						<span class="srchspan">-</span>
						<input type="text" id="price_high" name="price_high" class="form-control srchinput" value="" onkeyup="FUSION.lib.noAlpha(this)" />
					</div>
				</div>
				<div class="entrydiv_row2">
					<span class="entrylabel">Vintage</span>
					<div class="srchinputdiv">
						<input type="text" id="vintage_low" name="vintage_low" class="form-control srchinput" value="" onkeyup="FUSION.lib.noAlpha(this)" />
						<span class="srchspan">-</span>
						<input type="text" id="vintage_high" name="vintage_high" class="form-control srchinput" value="" onkeyup="FUSION.lib.noAlpha(this)" />
					</div>
				</div>
				<div class="w100fl" style="border-top: 1px solid #AAA;padding-top: 10px;">
<!--					<input type="button" value="Search" onclick="runSearch()" class="btn btn-success searchbtn" />//-->
					<button id="param_search_button" class="btn btn-success searchbtn" onclick="runParamSearch()">
						Search Benchmark
						<img id="loading_spinner" src="/assets/spinner.gif" class="spinner" />
					</button>
					<button id="param_search_button" class="btn btn-danger clearbtn" onclick="clearForm()">
						Clear Form
					</button>
				</div>
			</div>
			<div class="w100fl" style="margin-top:30px;">
				<table class="table" id="wine_results_table">
					<thead>
						<tr>
							<th style="width:120px;text-align:center;">Label</th>
							<th style="min-width:100px;">Name</th>
							<th style="min-width:100px;">Details</th>
							<th style="width:120px;text-align:center;">Scores</th>
							<th style="text-align:center;">Price</th>
							<th style="text-align:center;">Availability</th>
						</tr>
					</thead>
					<tbody></tbody>
				</table>
			</div>
		</div>
	</body>
</html>