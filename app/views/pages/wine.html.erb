						<option data-result-count="547" value="chardonnay">Chardonnay</option>
						<option data-result-count="1" value="gamay">Gamay</option>
						<option data-result-count="20" value="gewurztraminer">Gewurztraminer</option>
						<option data-result-count="68" value="grenache">Grenache</option>
						<option data-result-count="193" value="interesting reds">Interesting Reds</option>
						<option data-result-count="132" value="interesting sweets">Interesting Sweets</option>
						<option data-result-count="45" value="interesting whites">Interesting Whites</option>
						<option data-result-count="24" value="malbec">Malbec</option>
						<option data-result-count="127" value="merlot">Merlot</option>
						<option data-result-count="2" value="muscat">Muscat</option>
